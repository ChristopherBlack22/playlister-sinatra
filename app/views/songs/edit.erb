<h1>Edit <%=@song.name%></h1>
<form method="post" action="/songs/<%=@song.slug%>">
    <input type="hidden" id="hidden" name="_method" value="patch">
    <label>Artist Name: </label>
    <input type="text" name="artist[name]" id="Artist Name" value="<%=@song.artist.name%>"><br>

    <label>Genres: </label>
    <%@genres.each do |genre|%>
        <input type="checkbox" name="genres[]" id="<%=genre.name%>" value="<%=genre.id%>"><%=genre.name%>
    <%end%><br><br>

    <input type="submit" value="Save">
</form>